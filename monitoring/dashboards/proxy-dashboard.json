{
  "dashboard": {
    "title": "Cache Proxy Monitoring",
    "tags": ["cache", "proxy"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Total Requests",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(cache_requests_total)",
            "legendFormat": "Total Requests"
          }
        ]
      },
      {
        "id": 2,
        "title": "Success Rate",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(cache_requests_success) / sum(cache_requests_total) * 100",
            "legendFormat": "Success %"
          }
        ],
        "options": {
          "minValue": 0,
          "maxValue": 100
        }
      },
      {
        "id": 3,
        "title": "Failed Requests",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(cache_requests_failed)",
            "legendFormat": "Failed"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 4,
        "title": "Retry Count",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "sum(cache_retries_total)",
            "legendFormat": "Retries"
          }
        ]
      },
      {
        "id": 5,
        "title": "Request Rate (per second)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(cache_requests_total[1m])",
            "legendFormat": "{{instance}}"
          }
        ]
      },
      {
        "id": 6,
        "title": "Request Duration (95th percentile)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(cache_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95 - {{instance}}"
          },
          {
            "expr": "histogram_quantile(0.99, rate(cache_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p99 - {{instance}}"
          }
        ]
      },
      {
        "id": 7,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "rate(cache_requests_failed[1m])",
            "legendFormat": "Errors/sec - {{instance}}"
          }
        ],
        "alert": {
          "name": "High Error Rate",
          "conditions": [
            {
              "evaluator": {
                "params": [10],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "type": "avg"
              },
              "type": "query"
            }
          ]
        }
      }
    ],
    "refresh": "5s",
    "schemaVersion": 27,
    "version": 1
  }
}