{
  "title": "Cache Proxy Monitoring",
  "tags": ["cache", "proxy"],
  "timezone": "browser",
  "editable": true,
  "graphTooltip": 1,
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "title": "Total Requests Rate",
      "type": "stat",
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "sum(rate(cache_requests_total{app=\"proxy\"}[1m]))",
          "legendFormat": "Requests/sec",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "decimals": 2
        }
      }
    },
    {
      "id": 2,
      "title": "Success Rate (%)",
      "type": "gauge",
      "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
      "targets": [
        {
          "expr": "sum(rate(cache_requests_success{app=\"proxy\"}[5m])) / sum(rate(cache_requests_total{app=\"proxy\"}[5m])) * 100",
          "legendFormat": "Success Rate",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 80, "color": "yellow"},
              {"value": 95, "color": "green"}
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Failed Requests Rate",
      "type": "stat",
      "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "sum(rate(cache_requests_failed{app=\"proxy\"}[1m]))",
          "legendFormat": "Errors/sec",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "decimals": 2,
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 0.1, "color": "yellow"},
              {"value": 1, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Request Duration (p95)",
      "type": "stat",
      "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(cache_request_duration_bucket{app=\"proxy\"}[5m])) by (le))",
          "legendFormat": "p95 latency",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 3
        }
      }
    },
    {
      "id": 5,
      "title": "Requests by Proxy Instance",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "sum by (instance, vps) (rate(cache_requests_total{app=\"proxy\"}[1m]))",
          "legendFormat": "{{vps}} - {{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Success vs Failed Requests",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "sum(rate(cache_requests_success{app=\"proxy\"}[1m]))",
          "legendFormat": "Success",
          "refId": "A"
        },
        {
          "expr": "sum(rate(cache_requests_failed{app=\"proxy\"}[1m]))",
          "legendFormat": "Failed",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 7,
      "title": "Retries Rate",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "targets": [
        {
          "expr": "sum by (instance) (rate(cache_retries_total{app=\"proxy\"}[1m]))",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 8,
      "title": "Failover Status",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "targets": [
        {
          "expr": "sum(cache_failovers_active{app=\"proxy\"})",
          "legendFormat": "Active Failovers",
          "refId": "A"
        },
        {
          "expr": "sum(rate(cache_failovers_total{app=\"proxy\"}[5m]))",
          "legendFormat": "Failover Events Rate",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "stepAfter",
            "fillOpacity": 20
          }
        }
      }
    },
    {
      "id": 9,
      "title": "Request Duration Heatmap",
      "type": "heatmap",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24},
      "targets": [
        {
          "expr": "sum(rate(cache_request_duration_bucket{app=\"proxy\"}[1m])) by (le)",
          "legendFormat": "{{le}}",
          "format": "heatmap",
          "refId": "A"
        }
      ],
      "options": {
        "calculate": false,
        "calculation": {},
        "cellGap": 2,
        "color": {
          "exponent": 0.5,
          "fill": "dark-orange",
          "mode": "scheme",
          "reverse": false,
          "scale": "exponential",
          "scheme": "Spectral",
          "steps": 128
        }
      }
    }
  ]
}
